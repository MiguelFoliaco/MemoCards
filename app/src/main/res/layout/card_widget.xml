<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MemoCards.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:padding="0dp"
    android:theme="@style/Theme.MemoCards.AppWidgetContainer">

    <TextView
        android:id="@+id/key_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="世"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/reading_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/key_value"
        tools:text="せい、せ、そお"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/reading_kun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reading_on"
        tools:text="よ"
        android:textAlignment="center"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reading_kun"
        tools:text="よ"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/missing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reading"
        tools:text="Mundo, edad, generación"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/forward" />


</RelativeLayout>